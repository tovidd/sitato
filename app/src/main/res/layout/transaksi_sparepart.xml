<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pegawai.Area.transaksi.Transaksi_sparepart">

    <!--translationZ utk bring in front-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/orange80"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_searchSparepartTransaksiSparepart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_search" />
                <EditText
                    android:id="@+id/editText_searchSparepartTransaksiSparepart"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.70"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white80"
                    android:inputType="textFilter|text"
                    android:hint="Pencarian.." />

                <TextView
                    android:id="@+id/textView_deleteSearchSparepartTransaksiSparepart"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="15pt"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="X" />


            </LinearLayout>
        </RelativeLayout>

        <!--hasil pencarian pelanggan-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_SparepartTransaksiSparepart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <!--ScroolView hanya bisa mempunyai 1 child, jika lebih maka error-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <!--inputan pelanggan-->
        <LinearLayout
            android:id="@+id/linearLayout_formInputTransaksiSparepart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_NamaSparepartTransaksiSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="Nama sparepart"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editText_JumlahBeliSparepartTransaksiSparepart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah beli sparepart"
                    android:imeActionId="6"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnKosongkanKolom"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="Kosongkan kolom"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnHapusTransaksiSparepart"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="Hapus"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnEditTransaksiSparepart"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="Ubah"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSimpanTransaksiSparepart"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:text="Simpan"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Daftar sparepart yang akan dibeli"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_TransaksiSparepart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="300dp"
                android:layout_marginTop="5dp">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>